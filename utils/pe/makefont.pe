#!/usr/local/bin/fontforge -script

if ($argc < 3)
	Print("Usage: fontforge -script "+$0+" source-file target-file")
	Quit(1)
endif

Open($1)
SelectWorthOutputting()
if ($2:e == 'otf')
	UnlinkReference()
elseif ($2:e == 'ttf')
	ScaleToEm(2048)
endif
AddExtrema()
Simplify()
RoundToInt()
AutoHint()
Generate($2)
Close()
