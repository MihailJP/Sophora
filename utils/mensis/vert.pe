#!/usr/local/bin/mensis

if ($argc < 2)
	Print("Usage: "+$0+" font-file")
	Quit(1)
endif

Print("Reading source files...")
Open($1)

emSize=GetTableField("unitsPerEm", 'head')
SetTableField("vertTypoAscender", emSize / 2, 'vhea')
SetTableField("vertTypoDescender", -(emSize / 2), 'vhea')
SetTableField("minTopSideBearing", 0, 'vhea')
SetTableField("minBottomSideBearing", 0, 'vhea')
SetTableField("yMaxExtent", emSize, 'vhea')

Save()

Close()
